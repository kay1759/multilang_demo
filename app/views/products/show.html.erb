<div id="product-contents" class="clearfix">

  <h1 id="product-title_<%= @lang.locale %>" class="bg-primary"><%= @product.name @lang %></h1>

  <%= form_for :product, :url => "/#{@lang.locale}/cart/add_to_cart/" do |form| %>
    <div id="product-desc-1" class="row">
      <div class="col-xs-5 col-sm-5 col-md-5 col-lg-5">
	<%= render "shared/product_image" %>
      </div>
      
      <div class="col-xs-7 col-sm-7 col-md-7 col-lg-7">
	<%= render "shared/product_description" %>
      </div>
    </div>

    <div id="product-desc-2" class="row">
      <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
	<%= render "shared/product_info" %>
      </div>

      <div class="col-xs-6 col-sm-6 col-md-6 col-lg-6">
	<%= render "shared/product_purchase" %>
      </div>
    </div>
  <% end %> 
</div>
